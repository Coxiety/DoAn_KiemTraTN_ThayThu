<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.exam.controllers.teacher.ClassManagementController"
      spacing="10"
      stylesheets="@../../css/styles.css"
      prefHeight="600.0" prefWidth="800.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <!-- Header -->
        <Label text="Class Management" styleClass="title-label"/>

        <!-- Search and Add Section -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search classes..." 
                      HBox.hgrow="ALWAYS" onKeyReleased="#handleSearch"/>
            <Button text="Add New Class" onAction="#handleAddNew"/>
        </HBox>

        <!-- Split Pane for Class List and Student List -->
        <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
            <!-- Left Side - Class List -->
            <VBox spacing="10">
                <Label text="Classes" styleClass="subtitle-label"/>
                <TableView fx:id="classTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="codeColumn" text="Class Code" prefWidth="100"/>
                        <TableColumn fx:id="nameColumn" text="Class Name" prefWidth="150"/>
                        <TableColumn fx:id="studentsColumn" text="Students" prefWidth="60"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Right Side - Student List for Selected Class -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Students in Class:" styleClass="subtitle-label"/>
                    <Label fx:id="selectedClassLabel" styleClass="info-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Add Student" fx:id="addStudentButton" 
                            onAction="#handleAddStudent" disable="true"/>
                </HBox>
                <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="100"/>
                        <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="200"/>
                        <TableColumn fx:id="studentActionsColumn" text="Actions" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>

        <!-- Form Section -->
        <VBox fx:id="formSection" spacing="10" styleClass="form-container" visible="false">
            <Label text="Class Details" styleClass="subtitle-label"/>
            
            <GridPane hgap="10" vgap="10">
                <Label text="Class Code:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="codeField" promptText="Enter class code"
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Class Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" promptText="Enter class name"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancel" onAction="#handleCancel" 
                        styleClass="cancel-button"/>
                <Button text="Save" onAction="#handleSave" 
                        styleClass="save-button"/>
            </HBox>
        </VBox>

        <!-- Message Display -->
        <Label fx:id="messageLabel" styleClass="message-label"/>
    </children>

</VBox>